@model IEnumerable<WEBSITEBANMAYTINH.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Admin Users List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info">&nbsp;New Admin User</a>
    </div>
</div>
<table class="table table-striped border">
    <thead>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                Disabled
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @if (item.LockoutEnd != null && item.LockoutEnd > DateTime.Now)
                {
                    <label>Disabled</label>
                }
            </td>

            @*<td style="width:200px">
            <div class="btn-group" role="group">
                <a tyle="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="fas fa-edit"></i>
                </a>
                <a tyle="button" class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                    <i class="fas fa-list-alt"></i>
                </a>
                <a tyle="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
        </td>*@
            
            <td>
                @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                {
                <td style="width:200px">
                    <div class="btn-group" role="group">
                        <a tyle="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a tyle="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            }
            </tr>
        }
    </tbody>
</table>

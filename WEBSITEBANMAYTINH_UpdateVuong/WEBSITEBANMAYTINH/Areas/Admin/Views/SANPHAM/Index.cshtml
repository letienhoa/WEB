@model IEnumerable<WEBSITEBANMAYTINH.Models.SANPHAM>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-6">
        <h2 class="text-info">SanPham LIST</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;New SanPham</a>
    </div>
</div>
<table class="table table-striped border">
    <thead>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(model => model.TenSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LOAISANPHAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NHASANXUAT)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td style="text-align:center">
                @if (!item.LOAISANPHAM.TenLoaiSanPham.Equals("--None--"))
                {
                    @Html.DisplayFor(modelItem => item.LOAISANPHAM.TenLoaiSanPham)
                }
            </td>
            <td style="text-align:center">
                @if (!item.NHASANXUAT.TenNhaSanXuat.Equals("--None--"))
                {
                    @Html.DisplayFor(modelItem => item.NHASANXUAT.TenNhaSanXuat)
                }
            </td>
            <td style="width:200px">
                <div class="btn-group" role="group">
                    <a tyle="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a tyle="button" class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-list-alt"></i>
                    </a>
                    <a tyle="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

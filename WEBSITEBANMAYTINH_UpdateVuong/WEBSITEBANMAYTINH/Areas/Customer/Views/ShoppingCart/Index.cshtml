@model WEBSITEBANMAYTINH.Models.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <br /><br />
    <h2 class="text-info" style="text-align:center;font-size:200%;">Giỏ Hàng Của Bạn</h2>
    <br />
    @if(Model.SANPHAM.Count>0)
    {
        <div class="container border border-secondary rounded" style="padding: 15px;">
            <div class="row">
                <div class="col-8" style="border-right:1px solid #bbb9b9;">
                    <table class="table table-striped" width="100%">
                        <tr class="table-info">
                            <th style="text-align:center; width:20%"></th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.SANPHAM.FirstOrDefault().TenSanPham"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.SANPHAM.FirstOrDefault().DonGia"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.SANPHAM.FirstOrDefault().LOAISANPHAM.TenLoaiSanPham"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.SANPHAM.FirstOrDefault().NHASANXUAT.TenNhaSanXuat"></label>
                            </th>
                            <th style="text-align:center;"></th>
                            <th style="text-align:center;"></th>
                        </tr>
                        @foreach(var item in Model.SANPHAM)
                        {
                        <tr style="padding:50px;">
                            <td>
                                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                                    <img src="@item.Image" width="100%" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9;" />
                                </a>

                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(c => item.TenSanPham)
                            </td>
                            <td style="text-align:center">
                               @Html.DisplayFor(c => item.DonGia)
                            </td>
                            <td style="text-align:center">
                                @if (!item.LOAISANPHAM.TenLoaiSanPham.Equals("--None--"))
                                {
                                    @Html.DisplayFor(c => item.LOAISANPHAM.TenLoaiSanPham)
                                }
                            </td>
                            <td style="text-align:center">
                                @if (!item.NHASANXUAT.TenNhaSanXuat.Equals("--None--"))
                                {
                                    @Html.DisplayFor(c => item.NHASANXUAT.TenNhaSanXuat)
                                }
                            </td>
                            <td style="text-align:center">
                                <button type="submit" class="btn btn-danger" asp-action="remove" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></button>
                            </td>
                        </tr>
                        }
                    </table>
                </div>
                <div class="col-4" style="padding-left:30px;">
                    <div class="row">
                        <div class="col-12">
                            <label>Tên Khách Hàng:</label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.TenKhachHang" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label>Số Điện Thoại:</label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.SoDienThoai" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label>Email:</label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.Email" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label>Ngày Lập:</label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.NgayLap" value="" type="text" id="datepicker" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label>Thời Gian:</label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.ThoiGian" value="" type="text" class="timepicker form-control"/>
                        </div>
                        <div class="col-12">
                            <button type="submit" id="btnPlaceOrder" class="btn btn-success">Xác Nhận Thông Tin.</button>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    }
    else
    {
        <div>
            <h2 style="text-align:center;">Không có sản phẩm trong giỏ hàng của bạn.</h2>
        </div>
    }

</form>
@section Scripts{ 
    <script>
        $('.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 30,
            minTime: '10',
            maxTime: '09:30pm',
            startTime: '08:00',
            dynamic: true,
            dropdown: true,
            scrollbar: true
        });

        $(function () {
            $("#datepicker").datepicker({
                minDate: +1,maxDate:"+3M"
            });
        });
    </script>
}
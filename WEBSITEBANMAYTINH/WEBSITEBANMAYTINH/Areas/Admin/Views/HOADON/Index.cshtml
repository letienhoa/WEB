@model IEnumerable<WEBSITEBANMAYTINH.Models.HOADON>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">HoaDon LIST</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;New HoaDon</a>
    </div>
</div>
<table class="table table-striped border">
    <thead>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(model => model.KHACHHANG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SANPHAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TongDonGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayLap)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KHACHHANG.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SANPHAM.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongSanPham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TongDonGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayLap)
                </td>
                <td style="width:200px">
                    <div class="btn-group" role="group">
                        <a tyle="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a tyle="button" class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-list-alt"></i>
                        </a>
                        <a tyle="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@model WEBSITEBANMAYTINH.Models.ViewModel.HOADONViewModel
@using WEBSITEBANMAYTINH.Extensions

@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<h2 class="text-info">Create Hoa Don</h2>
<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="KHACHHANG"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.HOADON.KhachHangId" asp-items="Model.KHACHHANG.KHACHHANGLIST(Model.HOADON.KhachHangId)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SANPHAM"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.HOADON.SanPhamId" asp-items="Model.SANPHAM.SANPHAMLIST(Model.HOADON.SanPhamId)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="HOADON.SoLuongSanPham"></label>
            </div>
            <div class="col-5">
                <input asp-for="HOADON.SoLuongSanPham" class="form-control" />
            </div>
            <span asp-validation-for="HOADON.SoLuongSanPham" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="HOADON.TongDonGia"></label>
            </div>
            <div class="col-5">
                <input asp-for="HOADON.TongDonGia" class="form-control" />
            </div>
            <span asp-validation-for="HOADON.TongDonGia" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="HOADON.NgayLap"></label>
            </div>
            <div class="col-5">
                <input asp-for="HOADON.NgayLap" class="form-control" />
            </div>
            <span asp-validation-for="HOADON.NgayLap" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

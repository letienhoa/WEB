
@{
    ViewData["Title"] = "Home";
}


<div class="wrap">
    <div class="row">
        @foreach (var SANPHAM in Model)
        {
         <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color :steelblue;">@SANPHAM.TenSanPham</label>
                    </h4>
                </div>
                <img class="card-img-top" style="height:100%;" src="@SANPHAM.Image" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#a51313;">Giá:&nbsp;<b>@SANPHAM.DonGia<b>.vnđ</b></b></label>

                        </div>
                        <div class="add-cart">
                            <a asp-action="Details" asp-controller="Home" class="btn btn-primary" asp-route-id="@SANPHAM.Id">
                                Chi tiết
                            </a>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        }
        <div class="clear"> </div>
    </div>
</div>
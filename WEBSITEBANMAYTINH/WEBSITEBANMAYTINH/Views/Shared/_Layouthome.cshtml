@using Microsoft.AspNetCore.Http
@using WEBSITEBANMAYTINH.Extensions
@using WEBSITEBANMAYTINH.Utility
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Webbanmaytinh | Home :: W3layouts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/e1fda23462.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/jquery.timepicker.css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href='//fonts.googleapis.com/css?family=Londrina+Solid|Coda+Caption:800|Open+Sans' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/css/responsiveslides.css">
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/responsiveslides.min.js"></script>
    <script>
        $(function () {

            // Slideshow 1
            $("#slider1").responsiveSlides({
                maxwidth: 1600,
                speed: 600
            });
        });
    </script>
</head>
<body>
    <div class="wrap">

        <div class="header">
            <div class="search-bar">
                <form>
                    <input type="text"><input type="submit" value="Search" />
                </form>
            </div>
            <div class="clear"> </div>
            <div class="header-top-nav">
                <ul>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                        </li>
                        <li class="nav-item">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                    }

                    <li><a class="nav-link text-dark" asp-area="Admin" asp-controller="SANPHAM" asp-action="Index">Cơ Sở DL</a></li>

                    @if (HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart") != null)
                    {
                        <li style="color:white">
                            <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                                <i class="fas fa-shopping-cart"></i> &nbsp;
                                @{
                                    var count = HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart").Count;
                                }
                                (@count)
                            </a>
                        </li>
                    }
                    else
                    {
                        <li style="color:white">
                            <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                                <i class="fas fa-shopping-cart"></i> &nbsp;
                                (0)
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <div class="clear"> </div>
        </div>
    </div>
    <div class="clear"> </div>
    <div class="top-header">
        <div class="wrap">
            <div>
                <div class="logo">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Home"><img src="~/Image/icon/logoHome.png" title="logo" /></a>
                </div>
            </div>
            <div>
                <div class="top-nav">
                    <br /><br />
                    <ul>
                        <li><a asp-area="Customer" asp-controller="Home" asp-action="Home">Home</a></li>
                        <li><a href="about.html">About</a></li>
                        <li><a href="store.html">Store</a></li>
                        <li><a href="store.html">Featured</a></li>
                        <li><a href="blog.html">Blog</a></li>
                        <li><a href="contact.html">Contact</a></li>
                    </ul>
                </div>
            </div>

            <div class="clear"> </div>
        </div>
    </div>
    <br /><br />
    <div class="wrap">
        <div class="header">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer">
            <div class="wrap">
                <div class="section group">
                    <div class="col_1_of_4 span_1_of_4">
                        <h3>Thông tin về chúng tôi</h3>
                        <p>
                            VHCOMPUTER.COM - HI-END PC & GAMING PC
                            CÔNG TY TNHH CÔNG NGHỆ HÒA VƯƠNG
                        </p>
                    </div>
                    <div class="col_1_of_4 span_1_of_4">
                        <h3>DỊCH VỤ KHÁCH HÀNG</h3>
                        <p>Bảo hành, Đổi trả hàng</p>
                        <p>Thanh toán - Tài khoản, Thỏa thuận bảo mật thông tin.</p>
                        <p>Cảm ơn bạn đã quan tâm đến sản phẩm và dịch vụ của Vương Hòa computer, bạn cần.</p>
                    </div>
                    <div class="col_1_of_4 span_1_of_4">
                        <h3>Dia-Chi</h3>
                        <p>HoangDieu2-ThuDuc-TPHCM</p>
                        <h3>Duong day nong</h3>
                        <p>01649568834</p>
                        <p>01649568834</p>
                        <p>THỜI GIAN LÀM VIỆC: 08:30 - 21:30 TỪ THỨ 2 ĐẾN CHỦ NHẬT</p>
                    </div>
                    <div class="col_1_of_4 span_1_of_4 footer-lastgrid">
                        <h3>News-Letter</h3>
                        <form>
                            <input type="text"><input type="submit" value="go" />
                        </form>
                        <h3>Follow Us:</h3>
                        <ul>
                            <li><a href="#"><img src="~/Image/icon/twitter.png" title="twitter" />Twitter</a></li>
                            <li><a href="#"><img src="~/Image/icon/facebook.png" title="Facebook" />Facebook</a></li>
                            <li><a href="#"><img src="~/Image/icon/rss.png" title="Rss" />Rss</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container">
                &copy; 2019 - WEBSITEBANMAYTINH - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.js" asp-append-version="true"></script>
    <script src="~/js/jquery.timepicker.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>